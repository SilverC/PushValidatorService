@using PushValidator.Models.DeviceViewModels

@model ListDevicesViewModel
@{
    ViewData["Title"] = "Devices";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Devices" asp-action="Add">
        <button type="button" class="btn btn-default">Add Device</button>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                ID
            </th>
            <th>
                Registered
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Devices) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registered)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <form asp-action="Delete">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <input type="submit" value="Delete" class="btn btn-default" />
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>



